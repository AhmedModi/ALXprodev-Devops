#!/bin/bash

# Create output CSV file
report="pokemon_report.csv"
echo "Name,Height (m),Weight (kg)" > "$report"

# Process each PokÃ©mon JSON file
for file in pokemon_data/*.json; do
    name=$(jq -r '.name' "$file")
    height_dm=$(jq -r '.height' "$file")   # height in decimeters
    weight_hg=$(jq -r '.weight' "$file")   # weight in hectograms

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN {printf \"%.2f\", $height_dm * 0.1}")
    weight_kg=$(awk "BEGIN {printf \"%.2f\", $weight_hg * 0.1}")

    echo "$name,$height_m,$weight_kg" >> "$report"
done

# Confirm report generated
echo ""
echo "CSV Report generated at: $report"
echo ""

# Display CSV
cat "$report"

# Calculate averages using awk
echo ""
awk -F, '
NR > 1 {
    height_sum += $2
    weight_sum += $3
    count++
}
END {
    avg_height = height_sum / count
    avg_weight = weight_sum / count
    printf "Average Height: %.2f m\n", avg_height
    printf "Average Weight: %.2f kg\n", avg_weight
}' "$report"
