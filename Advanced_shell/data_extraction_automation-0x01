#!/bin/bash

# Extract name, height (in decimetres), weight (in hectograms), and type
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
height=$(jq '.height' data.json | awk '{printf "%.1f", $1/10}')  # Convert to meters
weight=$(jq '.weight' data.json | awk '{printf "%d", $1/10}')    # Convert to kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize

# Print formatted output
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
